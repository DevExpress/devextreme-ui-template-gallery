{
  "name": "devextreme-ui-template-gallery",
  "private": true,
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "set-theme": "node utils/set-theme.js",
    "copy-build": "node utils/copy-build.js",
    "copy-shell": "node utils/copy-shell.js",
    "make-embedded-mode": "node utils/make-embedded-mode.js",
    "lint-html": "prettier --write . && prettier --check .",
    "lint-js": "eslint .",
    "lint-fix": "prettier --write . && eslint --fix . && stylelint **/*.{css,scss} --fix",
    "lint-css": "stylelint **/*.{css,scss}",
    "lint-css-fix": "stylelint --fix **/*.{css,scss}",
    "lint-angular": "eslint packages/angular",
    "lint-react": "eslint packages/react",
    "lint-vue": "cd packages/vue && vue-cli-service lint",
    "lint-utils": "eslint utils/",
    "lint-bundles": "npm-run-all -p lint-angular lint-react lint-vue",
    "lint-angular-fix": "eslint --fix packages/angular",
    "lint-react-fix": "eslint --fix packages/react",
    "lint-utils --fix": "eslint --fix utils"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.18.9",
    "@typescript-eslint/eslint-plugin": "^4.8.0",
    "@typescript-eslint/parser": "^4.8.0",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-e2e-cypress": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-typescript": "^5.0.8",
    "@vue/cli-plugin-unit-jest": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/eslint-config-airbnb": "^6.0.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "babel-eslint": "^10.1.0",
    "eclint": "2.8.1",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-devextreme": "^0.1.37",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jest-formatting": "^3.0.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-perf": "^3.3.0",
    "eslint-plugin-spellcheck": "^0.0.17",
    "fs-extra": "^10.0.0",
    "prettier": "2.4.1",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-scss": "^4.1.0",
    "typescript": "^4.6.3",
    "vue": "^3.2.38",
    "vue-eslint-parser": "^9.0.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "devextreme": "23.2-next"
  },
  "pre-commit": [
    "lint-bundles"
  ]
}
